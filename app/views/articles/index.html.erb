<h1>Articles</h1>

<table>
  <% @articles.each do |article| %>
  <tr>
    <td><%= link_to article.id, article_path(article) %></td>
    <td><%= link_to article.title, article_path(article) %></td>
    <td><%= link_to "Edit this article", edit_article_path(article) %></td>
  </tr>
  <% end %>
</table>